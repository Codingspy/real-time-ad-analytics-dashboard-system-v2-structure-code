# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# MongoDB Configuration (Docker)
MONGODB_URI=mongodb://adanalytics:adanalytics123@localhost:27017/ad-analytics?authSource=ad-analytics
MONGODB_URI_PROD=mongodb://your-production-mongodb-uri

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (for password reset, etc.)
# Option 1: Gmail SMTP (requires app password)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Option 2: Mailtrap (for development/testing)
# EMAIL_HOST=smtp.mailtrap.io
# EMAIL_PORT=2525
# EMAIL_USER=your-mailtrap-user
# EMAIL_PASS=your-mailtrap-password

# Option 3: SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key

EMAIL_FROM=AdAnalytics <noreply@adanalytics.com>

# Elasticsearch Configuration (Docker)
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=AdAnalytics2024!Secure
ELASTICSEARCH_INDEX=ad-analytics-events

# Redis Configuration (Docker)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis123

# Logstash Configuration
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5000

# Kibana Configuration
KIBANA_URL=http://localhost:5601

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
